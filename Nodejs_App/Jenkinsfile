pipeline {
    agent none  // Disable top-level agent

    stages {
        stage('Checkout and Build') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            options {
                skipDefaultCheckout()
            }
            steps {
                // Checkout inside the container
                checkout scm

                // Debug: show files
                sh 'ls -la'

                // Install dependencies
                sh 'npm install'

                // Run tests
                sh 'npm test'

                // Build project
                sh 'npm run build'
            }
            post {
                success {
                    archiveArtifacts artifacts: 'dist/**', fingerprint: true
                }
            }
        }
    }
}

